{
  "name": "vibego",
  "private": true,
  "packageManager": "pnpm@10.4.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "init-db": "pnpm --filter @vibego/server run init-db",
    "dev": "concurrently -n protocol,server,web -c auto --kill-others-on-fail=false \"pnpm --filter @vibego/protocol dev\" \"pnpm --filter @vibego/server dev\" \"pnpm --filter @vibego/web dev\"",
    "control": "pnpm --filter @vibego/control dev",
    "build": "pnpm -r build",
    "start": "pnpm --filter @vibego/server start",
    "lint": "pnpm -r lint",
    "pm2:start": "pnpm build && pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop ecosystem.config.cjs",
    "pm2:restart": "pm2 restart ecosystem.config.cjs",
    "pm2:logs": "pm2 logs vibego-server"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
